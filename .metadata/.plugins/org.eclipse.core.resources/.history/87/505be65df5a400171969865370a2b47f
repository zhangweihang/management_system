		ArrayList<Child> child = null;
		try {
			child = (ArrayList<Child>) StudentDAO.findAll();
		} catch (SQLException e1) {
			
			e1.printStackTrace();
		}
		
		if(stu != null && stu.size()>0){
			/*resp.setContentType("text/html;charset=utf-8");
			PrintWriter pw = resp.getWriter();
			for(Student s:stu){
				pw.println("<h1>"+s+"</h1>");
