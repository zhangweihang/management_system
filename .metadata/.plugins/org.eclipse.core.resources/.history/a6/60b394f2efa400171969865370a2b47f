package com.ihtc.manage_child;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class UserDAO {

	private static final String SAVE = "insert into user values(?,?)";
	
	public static boolean save(User entity) throws SQLException {
		
		if(entity.getName() == null || entity.getName().equals("") || entity.getPassword()== null || entity.getPassword().equals("")){
			return false;
		}
		
		Connection con = DBUtil.getCon();
		PreparedStatement psm = con.prepareStatement(SAVE,Statement.RETURN_GENERATED_KEYS);
		
		try {
			
			psm = con.prepareStatement(SAVE,
					Statement.RETURN_GENERATED_KEYS);
			
			psm.setString(1, entity.getName());
			psm.setString(2, entity.getPassword());
			psm.executeUpdate();
			
			return true;
			
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
		finally{
			
			if(psm != null){
				psm.close();
			}
			
			if(con != null){
				con.close();
			}
			
		}
		
		
		return false;
	}

	public static User findById(String name1) throws SQLException {
	
		Connection con = null;
		Statement smt = null;
		ResultSet rs = null;
		User user = null;
			
		try {
			
			Class.forName("com.mysql.jdbc.Driver");
			con = DriverManager.getConnection(conPath,name,password);
			smt = con.createStatement();
			rs = smt.executeQuery("select * from user where name = '"+name1+"'");
			if(rs.next()){
				user = new User(rs.getString("name"),rs.getString("password"));
				
			}
			
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
		finally{
			
			if(smt != null){
				smt.close();
			}

			if(con != null){
				con.close();
			}
			
		}
		
		
		return user;
	}

}